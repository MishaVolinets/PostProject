@model IEnumerable<PostProject.Models.PostModel>
@{
    ViewBag.Title = "Post";
}

<h2>Post</h2>

<form method="post" action="/Home/SentPost">
    <div class="massageBlock">
        <div class="insideMassageBlock">
            <div class="inputBlock">
                <div class="Text">Title</div>
                <div class="Input">
                    <input type="text" name="Title">
                </div>
            </div>
            <div class="inputBlock">
                <div class="Text">Text</div>
                <div class="Input">
                    <textarea rows="6" cols="21" name="Description"></textarea>
                </div>
            </div>
            <div class="inputBlock">
                <input type="submit" value="Send post" />
            </div>
        </div>
    </div>
</form>

    @if (Model != null)
    {
        foreach (var inst in Model)
        {
            <div class="bl-Main">
                <div class="bl-info">
                    <div class="bl-tit">
                        <div class="name">Misha Volinets</div>
                        <form method="post" action="/Home/DeletePost?id=@inst.Id" name="DeleteForm">
                            <a href="#" class="button" onClick="document.forms.DeleteForm.submit();">Видалити</a>
                        </form>
                    </div>
                    <div class="bl-tit">
                        <div class="date">@inst.DateOfCreate</div>
                        <form method="post" action="/Home/EditPost?id=@inst.Id" name="EditForm">
                            <a href="#" class="button" onClick="document.forms.EditForm.submit();">Редагувати</a>
                        </form>
                    </div>
                </div>
                <div class="bl-title" id="@(inst.Id)">
                    @inst.Title

                </div>
                <div class="bl-description">
                    <p>@inst.Description</p>
                </div>
            </div>
        }
    }
@Scripts.Render("~/Scripts/script.js");